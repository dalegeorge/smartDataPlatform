<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaomi.smartDataPlatform.repository.CustomerRepository">
    <resultMap id="customersMap" type="com.xiaomi.smartDataPlatform.entity.Customer">
        <id column="cid" property="id"></id>
        <result column="cname" property="name"></result>
        <collection property="products" ofType="com.xiaomi.smartDataPlatform.entity.Products">
            <id column="pid" property="id"></id>
            <result column="pname" property="name"></result>
        </collection>
    </resultMap>
    <select id="findById" parameterType="long" resultMap="customersMap">
        select c.id as cid, c.name as cname, p.id as pid, p.name as pname from customers c, products p, customer_product_purchases cpro where c.id = #{id} and cpro.cust_id = c.id and cpro.prod_id = p.id;
    </select>
</mapper>