<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaomi.smartDataPlatform.repository.UserRepository">
    <resultMap id="usersMap" type="com.xiaomi.smartDataPlatform.entity.Users">
        <id column="uid" property="id"></id>
        <result column="uname" property="name"></result>
        <collection property="platforms" ofType="com.xiaomi.smartDataPlatform.entity.Platform">
            <id column="pid" property="id"></id>
            <result column="pname" property="name"></result>
        </collection>
    </resultMap>
    <select id="findById" parameterType="long" resultMap="usersMap">
        select p.id as pid,p.name as pname,u.id as uid,u.name as uname from users u, platform p where p.id = #{id} and p.id = u.id;
    </select>
    <select id="findAll" resultType="com.xiaomi.smartDataPlatform.entity.Users">
        select * from Users
    </select>
</mapper>
